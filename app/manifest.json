{
    "name": "__MSG_appName__",
    "version": "0.0.3",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-grey-32.png",
        "128": "images/icon-grey-32.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "bower_components/gapi-unofficial/client.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "19": "images/icon-grey-32.png",
            "38": "images/icon-grey-32.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "clipboardRead",
        "clipboardWrite"
    ],
    "content_security_policy": "script-src 'self' https://apis.google.com https://www.googleapis.com/ 'unsafe-eval'; object-src 'self'"
}